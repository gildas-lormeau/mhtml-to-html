{
	"env": {
		"es6": true,
		"node": false,
		"browser": false
	},
	"globals": {
		"console": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"ignorePatterns": [
		"/lib/"
	],
	"rules": {
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"no-console": [
			"warn"
		]
	}
}